@model IEnumerable<WiredExamDomain.Models.Exam>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            <label for="id">UserId</label>
        </th>

        <th>
            <label for="id">Başlık</label>
        </th>
        <th>
            <label for="id">Açıklama</label>
        </th>
        <th>
            <label for="id">Tarih</label>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.userId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>

            <td>
                <a href="@Url.Action("Delete", "Exam",new { id=item.examId })" class="btn btn-danger btn-xs">
                    Sil
                    <span class="fa fa-trash"></span>
                </a>
            </td>
        </tr>
    }

</table>
